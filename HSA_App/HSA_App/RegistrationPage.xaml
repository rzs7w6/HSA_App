<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
	xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
	xmlns:local="clr-namespace:HSA_App"
	Title="Registration Page"
	x:Class="HSA_App.RegistrationPage"
             BackgroundColor="#f9f9f9">
    <ScrollView>

        <StackLayout Spacing="5" Margin="15">

            <Button x:Name="backButton"
                Clicked="handleBack"
                Text="Back"
                VerticalOptions="Start"
                HorizontalOptions="Start"
                    Margin="0"/>

            <Label  Text="Registration"
                FontSize="30"
                HorizontalTextAlignment="Center"
                VerticalOptions="Start"
			    HorizontalOptions="Fill"
                Margin="0,40,0,0" />

            <Entry  x:Name="fname"
                Placeholder="First name"
                HeightRequest="45"
                VerticalOptions="Center"
			    HorizontalOptions="Fill"
                Text="" />

            <Entry  x:Name="lname"
                Placeholder="Last name"
                HeightRequest="45"
                VerticalOptions="Center"
			    HorizontalOptions="Fill" 
                Text="" />

            <Entry  
                x:Name="email"
                Placeholder="Email"
                HeightRequest="45"
                VerticalOptions="Center"
			    HorizontalOptions="Fill"
			    Keyboard="Email">
                <Entry.Behaviors>
                    <local:EmailBehaviorValidator x:Name="emailValidator"/>
                </Entry.Behaviors>
            </Entry>

            <Entry x:Name="accountNum"

			    Placeholder="Account Number"
			    Keyboard="Numeric"
			    VerticalOptions="Center"
			    HorizontalOptions="Fill"
			    Text=""/>
            
            <Label x:Name="dobLabel"
			    Text="Date of Birth"
			    VerticalOptions="Center"
			    HorizontalOptions="Fill"
                <DatePicker VerticalOptions="CenterAndExpand"
			        HorizontalOptions="CenterAndExpand"
			        x:Name="dobPicker" Date="{Binding DOB}">
                    <DatePicker.Format>yyyy-dd-MM</DatePicker.Format>
                </DatePicker>

            <Entry  x:Name="username"
                Placeholder="username"
                HeightRequest="45"
                VerticalOptions="Center"
			    HorizontalOptions="Fill"
                Text="" />
            
            <Entry x:Name="password1"
			    Placeholder="password"
			    HeightRequest="45"
			    VerticalOptions="Center"
			    HorizontalOptions="Fill"
			    IsPassword="true"
			    Text=""/>
            
            <Entry x:Name="password2"
			    Placeholder="confirm password"
			    HeightRequest="45"
			    VerticalOptions="Center"
			    HorizontalOptions="Fill"
			    IsPassword="true"
			    Text=""/>
            
            <Button x:Name="regButton"
                Clicked="handleReg"
                Text="Register"
                HeightRequest="45"
                VerticalOptions="End"
			    HorizontalOptions="Fill" />
        </StackLayout>
    </ScrollView>
</ContentPage>
